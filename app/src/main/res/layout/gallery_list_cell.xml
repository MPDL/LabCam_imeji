<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/cell_bg_gradient"
    android:padding="2dip"
    android:id="@+id/relOne">





    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/imeji"
        android:id="@+id/list_gallery_cell_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:background="@drawable/custom_border"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cell_bg_gradient"
        android:gravity="bottom"
        android:id="@+id/bottomLayout"
        android:layout_below="@+id/list_gallery_cell_thumbnail">


        <TextView
            android:id="@+id/list_item_gallery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:layout_marginStart="10dip"
            android:text="Title"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/list_item_gallery_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="10dip"
            android:layout_marginBottom="25dp"
            android:textSize="@dimen/text_size"
            android:text="status"
            android:layout_toRightOf="@+id/list_gallery_cell_thumbnail"
            />

            <TextView
            android:id="@+id/list_item_gallery_ucount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginStart="10dip"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/text_size"
            android:text=""
            android:layout_toRightOf="@+id/list_gallery_cell_thumbnail"
            />

    </LinearLayout>




</RelativeLayout>