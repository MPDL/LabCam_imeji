<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="@color/primary"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="42dp"
        android:id="@+id/linearLayout">


        <ImageView
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:background="@drawable/icon_for_login"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/label_server"-->
                <!--android:padding="3dp"-->
                <!--android:layout_marginLeft="6dp"-->
                <!--android:text="SERVER:"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="#cccccc" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_gluons"
                android:padding="3dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/round_button"
                android:text="GLUONS"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/label_gluons"
                android:padding="3dp"
                android:id="@+id/label_other"
                android:layout_marginLeft="6dp"
                android:text="Other Server"
                android:textSize="16sp"
                android:textColor="#cccccc" />

        </RelativeLayout>
        
        <EditText
            android:id="@+id/serverURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://"
            android:textColor="#cccccc"
            android:textSize="14sp"
            android:inputType="text"
            android:textColorHint="#cccccc"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/userName"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:inputType="text"
            android:textColor="#000000"
            android:padding="10dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:hint="USERNAME"
            android:textSize="15dp"
            android:textColorHint="#cccccc" />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="text"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:hint="PASSWORD"
            android:textSize="15dp"
            android:textColorHint="#cccccc"
            android:password="true" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/clickable_login"
            android:text="LOGIN"
            android:textSize="15dp"
            android:textColor="@drawable/clickable_color_login"
            />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/tv_register"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:text="Register"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/tv_new_here"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:text="New here?"
                android:textSize="14sp"
                />
        </LinearLayout>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/qr_scan"
            android:id="@+id/qr_scanner"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            />



    </LinearLayout>





</RelativeLayout>