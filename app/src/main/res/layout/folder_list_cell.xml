<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/cell_bg_gradient"
    android:padding="2dip" >

    <!--  ListView thumbnail
    <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp" />
    -->

    <ImageView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:src="@drawable/imeji"
        android:id="@+id/list_item_cell_thumbnail"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="30dip"/>

    <TextView
        android:id="@+id/list_item_cell_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/list_item_cell_thumbnail"
        android:textColor="#040404"
        android:layout_marginRight="25dip"
        android:text="Title"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <!-- creator name-->
    <TextView
        android:id="@+id/list_item_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/list_item_cell_title"
        android:textColor="#ffffff"
        android:textSize="10dip"
        android:text="Some Cool Guy"
        android:layout_toRightOf="@+id/list_item_cell_thumbnail"
     />

    <!-- time -->
    <!--<TextView-->
