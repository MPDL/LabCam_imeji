<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.com.mpdlcamera" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- device boot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-feature android:name = "android.hardware.camera" android:required="false"/>

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:backupAgent=".Utils.BackupFileHelper"
        android:icon="@drawable/icon_app"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme.WithoutActionBar" >
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIA3v4YX2ItNJ9TLtA9JbvxE69ul_QXQzIV-GFzA" />
        <meta-data
            android:name="AA_DB_NAME"
            android:value="MPDLCam.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <!-- Auth -->
        <activity
            android:name=".Auth.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Auth.QRScannerActivity"
            android:label="@string/app_name"
            android:parentActivityName=".Auth.LoginActivity"
            android:theme="@style/Theme.AppCompat" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Auth.LoginActivity" />
        </activity>

        <!-- Folders and Items -->
        <activity
            android:name=".Folder.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ItemDetails.ItemsActivity"
            android:label="@string/title_item_activity"
            android:parentActivityName=".Folder.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Folder.MainActivity" />
        </activity>
        <activity
            android:name=".ItemDetails.DetailActivity"
            android:label="@string/title_item_detail_activity"
            android:parentActivityName=".ItemDetails.ItemsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemDetails.ItemsActivity" />
        </activity>
        <activity
            android:name=".Gallery.LocalImageActivity"
            android:label="@string/title_local_activity"
            android:parentActivityName=".Gallery.GalleryListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Folder.MainActivity" />
        </activity>

        <!-- for settings -->
        <activity
            android:name=".Settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".Folder.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Folder.MainActivity" />
        </activity>
        <activity
            android:name=".Settings.BackupSettingsActivity"
            android:label="@string/title_backup_activity"
            android:parentActivityName=".Settings.SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Settings.SettingsActivity" />
        </activity>
        <activity
            android:name=".Settings.LocalAlbumSettingsActivity"
            android:label="@string/title_activity_local_album"
            android:parentActivityName=".Settings.SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Settings.SettingsActivity" />
        </activity>
        <activity
            android:name=".Settings.RemoteCollectionSettingsActivity"
            android:label="@string/title_activity_remote_collection"
            android:parentActivityName=".Settings.SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Settings.SettingsActivity" />
        </activity>
        <activity
            android:name=".Settings.BackUpOptionSettings"
            android:label="@string/title_backup_activity" >
        </activity>
        <activity
            android:name=".Settings.PrefActivity"
            android:parentActivityName=".Settings.BackupSettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Settings.SettingsActivity" />
        </activity>
        <activity
            android:name=".Upload.PopupActivity"
            android:excludeFromRecents="true"
            android:label="Logout Confirmation"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:theme="@android:style/Theme.Dialog" />

        <!-- service -->
        <service
            android:name=".Folder.UploadService"
            android:enabled="true" >
        </service>
        <service
            android:name=".AutoRun.ManualUploadService"
            android:enabled="true" >
        </service>

        <receiver
            android:name=".NetChangeManager.NetWorkStateReceiver"
            android:label="NetworkChangeReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".AutoRun.BootBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name=".AutoRun.AutoRunService" />
        <service
            android:name=".AutoRun.TaskUploadService"
            android:enabled="true" >
        </service>

        <receiver
            android:name=".AutoRun.CameraEventReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.android.camera.NEW_PICTURE" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.activeandroid.content.ContentProvider"
            android:authorities="com.activeandroid.content.ContentProvider" />

    </application>

</manifest>
